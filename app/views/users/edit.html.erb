<main>
  <p id = "notice"><%= notice %></p>
  <div class = "container">
    <div class = "row">
      <div class = "col-lg-5 px-sm-0 mx-auto">
        <h2>User info</h2>
          <% if @user.errors.any? %>
          <div class = "error_explanation"><!-- エラー内容はclassで囲っておく -->
            <h3><%=pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3><!-- pluralizeメソッドでエラーの数を複数形かどうか判断する -->
            <ul><!-- エラーメッセージをリストとして表示する -->
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_with model:@user, local:true do |f| %>
          <div class = "form-group">
            <label for = "user_name">Name</label>
            <%= f.text_field :name, class: "form-control", id: "user_name" %>
          </div>
          <div class = "form-group">
            <label for = "user_image">Image</label>
            <%= f.attachment_field :profile_image, class: "form-control-file", id: "user_image" %>
          </div>
          <div class = "form-group">
            <label for = "user_introduction">Introduction</label>
            <%= f.text_area :introduction, class: "form-control", id: "user_introduction" %>
          </div>
          <div class = "form-group">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>