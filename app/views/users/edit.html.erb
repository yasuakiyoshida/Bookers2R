<main>
  <p id = "notice"><%= notice %></p>
  <div class = "container">
    <div class = "row">
      <div class = "col-lg-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
          <div class = "form-group">
            <label for = "user_name">Name</label>
            <%= f.text_field :name, class: "form-control", id: "user_name" %>
          </div>
          <div class = "form-group">
            <label for = "user_image">Image</label>
            <%= f.attachment_field :profile_image, class: "form-control-file", id: "user_image" %>
          </div>
          <div class = "form-group">
            <label for = "user_introduction">Introduction</label>
            <%= f.text_area :introduction, class: "form-control", id: "user_introduction" %>
          </div>
          <div class = "form-group">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>