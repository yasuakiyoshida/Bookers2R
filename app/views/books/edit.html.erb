<main>
  <p id = "notice"><%= notice %></p>
  <div class = "container">
    <div class = "row">
      <div class = "col-lg-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <%= form_with model:@book, local:true do |f| %>
          <div class = "form-group">
            <label for = "book_title">Title</label>
            <%= f.text_field :title, class: "form-control", id: "book_title" %>
          </div>
          <div class = "form-group">
            <label for = "book_body">Opinion</label>
            <%= f.text_area :body, class: "form-control", id: "book_body" %>
          </div>
          <div class = "form-group">
            <%= f.submit "Update Book", class: "btn btn-success" %>
          </div>
        <% end %>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>