<main>
  <p id = "notice"><%= notice %></p>
  <div class = "container">
    <div class = "row">
      <div class = "col-lg-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <div class = "error_explanation"><!-- エラー内容はclassで囲っておく -->
            <h3><%=pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3><!-- pluralizeメソッドでエラーの数を複数形かどうか判断する -->
            <ul><!-- エラーメッセージをリストとして表示する -->
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <%= form_with model:@book, local:true do |f| %>
          <div class = "form-group">
            <label for = "book_title">Title</label>
            <%= f.text_field :title, class: "form-control", id: "book_title" %>
          </div>
          <div class = "form-group">
            <label for = "book_body">Opinion</label>
            <%= f.text_area :body, class: "form-control", id: "book_body" %>
          </div>
          <div class = "form-group">
            <%= f.submit "Update Book", class: "btn btn-success" %>
          </div>
        <% end %>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>